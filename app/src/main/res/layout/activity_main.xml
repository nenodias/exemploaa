<?xml version="1.0" encoding="utf-8"?>
<ScrollView
	android:id="@+id/activity_main"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	tools:context="br.com.victor.exemploAA.MainActivity">
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:paddingBottom="@dimen/activity_vertical_margin"
		android:paddingLeft="@dimen/activity_horizontal_margin"
		android:paddingRight="@dimen/activity_horizontal_margin"
		android:paddingTop="@dimen/activity_vertical_margin"
		android:orientation="vertical">
		<Button
			android:id="@+id/buttonSomaNormal"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="Soma normal"/>
		<Button
			android:id="@+id/buttonSomaAA"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="10dp"
			android:text="Soma com Android Annotations"/>
		<Button
			android:id="@+id/buttonThreadNormal"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="10dp"
			android:text="Thread normal"/>
		<Button
			android:id="@+id/buttonThreadAA"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="10dp"
			android:text="Thread com Android Annotations"/>
		<Button
			android:id="@+id/buttonOptionsMenuNormal"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="10dp"
			android:text="Options menu normal"/>
		<Button
			android:id="@+id/buttonOptionsMenuAA"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="10dp"
			android:text="Options menu com Android Annotations"/>
		<Button
			android:id="@+id/buttonParametrosNormal"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="10dp"
			android:text="Passando parâmetros normal"/>
		<Button
			android:id="@+id/buttonParametrosAA"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="10dp"
			android:text="Passando parâmetros com Android Annotations"/>
	</LinearLayout>
</ScrollView>
